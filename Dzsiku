<script>
    function playAudio() {
        const synth = window.speechSynthesis;
        const utterance = new SpeechSynthesisUtterance("Dzsiku");
        utterance.lang = 'hu-HU';
        utterance.rate = 0.8; 
        synth.speak(utterance);
    }

    function toggleText() {
        const group = document.getElementById('toggleGroup');
        const btnText = document.getElementById('btnText');
        group.classList.toggle('active');
        btnText.innerText = group.classList.contains('active') ? "Kevesebb megjelenítése" : "Több megjelenítése";
    }
</script>

